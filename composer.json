{
    "name": "raffaelj/cpmultiplane",
    "description": "A small PHP frontend for Cockpit CMS",
    "type": "project",
    "license": "MIT",
    "homepage": "https://cpmultiplane.rlj.me",
    "keywords": ["frontend", "php", "cockpit"],
    "authors": [
        {
            "name": "Raffael Jesche",
            "homepage": "https://www.rlj.me"
        }
    ],
    "require": {
        "php": ">= 7.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "oomphinc/composer-installers-extender": "^2.0",
        "aheinze/cockpit": "^0.12.2",
        "raffaelj/cockpit-cpmultiplanegui": "^0.3.4",
        "raffaelj/cockpit-uniqueslugs": "^0.5.4",
        "raffaelj/cockpit-formvalidation": "^0.4.0",
        "raffaelj/cockpit-babel": "^0.1.0"
    },
    "config": {
        "vendor-dir": "lib/vendor",
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "extra": {
        "installer-name": "CpMultiplane",
        "installer-types": ["project"],
        "installer-paths": {
            "cockpit": [
                "aheinze/cockpit"
            ],
            "cockpit/addons/{$name}": [
                "type:cockpit-module"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "php ./mp multiplane/update-htaccess"
        ]
    }
}
